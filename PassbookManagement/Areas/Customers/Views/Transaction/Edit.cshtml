        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TransactionId" />
            <div class="form-group">
                <label asp-for="PassbookRefId" class="control-label"></label>
                <select asp-for="PassbookRefId" class="form-control" asp-items="ViewBag.PassbookRefId"></select>
                <span asp-validation-for="PassbookRefId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmployeeRefId" class="control-label"></label>
                <select asp-for="EmployeeRefId" class="form-control" asp-items="ViewBag.EmployeeRefId"></select>
                <span asp-validation-for="EmployeeRefId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TransactionMethod" class="control-label"></label>
                <input asp-for="TransactionMethod" class="form-control" />
                <span asp-validation-for="TransactionMethod" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TransactionType" class="control-label"></label>
                <input asp-for="TransactionType" class="form-control" />
                <span asp-validation-for="TransactionType" class="text-danger"></span>
